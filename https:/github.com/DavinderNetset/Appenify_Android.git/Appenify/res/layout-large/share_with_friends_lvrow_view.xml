<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    


    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareWithFriendsLVRowContainer"
        >
         <ImageView 
             android:id="@+id/shareWithFriendsLVRowimage"
            android:layout_width="62dp"
            android:layout_height="62dp"
           android:layout_marginLeft="10dp"
            android:padding="6dp"
            />
         
        
          <TextView android:id="@+id/shareWithFriendsLVRowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shareWithFriendsLVRowimage"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="17dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            />
          
        
            <CheckBox android:id="@+id/shareWithFriendsLVRowCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:layout_marginRight="25dp"
       />
            
    </RelativeLayout>
</RelativeLayout>
