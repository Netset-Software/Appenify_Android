<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.calgiary.appenify.ActionBar
        android:id="@+id/abar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
   
     
     
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/abar1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
              >

                <ImageView
                    android:id="@+id/event_banner_pic"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:background="@drawable/event_detailll" 
                    android:scaleType="fitXY"
                    android:onClick="getClickMethod"
             
                />

                <TextView
                    android:id="@+id/eventDetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="@string/event_detail_title"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical" 
                
             >

                <LinearLayout
                    android:id="@+id/theme1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/wedding"
                        android:textColor="#d94949"
                        android:layout_marginTop="5dp"
                        android:textSize="25sp"/>

                    <TextView
                        android:id="@+id/dayNAmeView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg1"
                        android:gravity="center"
                        android:text="@string/sat"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bachelorette_party"
                        android:gravity="left|center_vertical"
                        android:textColor="#d94949"
                        android:layout_marginTop="10dp"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/dateYearView"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg2"
                        android:gravity="center"
                        android:text="@string/date_year"
                        android:textColor="#ffffff"
                       android:textSize="25sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/theme3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/all_white_outlets"
                        android:textColor="#d94949"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/hoursView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg3"
                        android:gravity="center"
                        android:text="@string/hoursStr"
                        android:paddingTop="3dp"
                        android:textColor="#ffffff"
                       android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="5" >

                <LinearLayout
                    android:id="@+id/in_l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/event_ends"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/eventsEndsView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textSize="21sp"
                        android:text="@string/event_end_date" />
                </LinearLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/in_l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="@string/exclusive_only"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/v11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/in_l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/mapiconLay"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/locationAddressView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                          
                            android:gravity="left"
                            android:text="@string/grand_place"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                      
                    </LinearLayout>

                  
		<RelativeLayout 
		    android:id="@+id/mapiconLay"
		    android:layout_width="40dp"
		    android:layout_height="fill_parent"
		      android:layout_alignParentRight="true"
		      android:paddingTop="6dp"
		      android:paddingBottom="6dp"
		      android:paddingRight="5dp"
		      android:layout_centerVertical="true"
		    >
                        <ImageView
                            android:id="@+id/mapicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/location" 
                            android:paddingRight="5dp"
                            
                            
                           />
                        </RelativeLayout>
                 
                </RelativeLayout>

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:id="@+id/in_l4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5"
                     >

                    <TextView
                        android:id="@+id/descTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_weight="4"
                        android:textSize="24sp"
                        android:text="@string/lorem_text"
                        android:textColor="@android:color/darker_gray" />

                  

                    <RelativeLayout 
                            android:id="@+id/drp_iconLay"
                          android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="7dp"
                         android:paddingRight="5dp"
                        >
                        <ImageView
                            android:id="@+id/drp_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                           android:layout_marginTop="7dp"
                         
                          android:layout_marginRight="5dp"
                            android:background="@drawable/down_arrow" />
                   </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/share_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1" 
                    >

                    <LinearLayout
                        android:id="@+id/share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                     

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" 
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/s1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/fav2"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_to_fav"
                                android:layout_gravity="center_horizontal"
                                android:textSize="24sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                      

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/s2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                  android:layout_marginBottom="10dp"
                                  android:layout_gravity="center_horizontal"
                                android:src="@drawable/share2" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/share_with_friends"
                                android:layout_gravity="center_horizontal"
                           android:textSize="24sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                    

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" 
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/s3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                  android:layout_marginBottom="10dp"
                                android:src="@drawable/event2"
                                android:layout_gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/textView111"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/i_like_this_event"
                               android:textSize="24sp"
                               android:layout_gravity="center_horizontal"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
 <LinearLayout
        android:id="@+id/consent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/agree"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/bar_select"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/will_this_event"
                android:textColor="#ffffff"
              android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/disagree"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/bar_back"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" 
             android:visibility="gone"
           >

            <TextView
                android:id="@+id/disag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="#d94949"
                android:text="@string/wont_be"
              android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
                
               </LinearLayout>
        </RelativeLayout>
    </ScrollView>

   
</RelativeLayout>