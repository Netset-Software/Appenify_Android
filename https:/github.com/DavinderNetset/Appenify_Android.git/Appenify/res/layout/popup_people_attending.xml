<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/evnt_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/evnt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/evnt_image"
            android:textColor="@android:color/black"
            android:textSize="18sp"
      
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/evnt_title"
            android:layout_toRightOf="@+id/evnt_image"
            android:text="Alexandra Nite Club,London"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:textColor="@color/grayText"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mor_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc"
            android:layout_toRightOf="@+id/evnt_image"
            android:text="Sat,03 Oct 2014 21:45"
            android:layout_marginTop="3dp"
            android:paddingLeft="4dp"
            android:textColor="@android:color/darker_gray"
android:visibility="gone"/>

        <ImageView
            android:id="@+id/fwd_arr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/red_arrow" />
    </RelativeLayout>

</RelativeLayout>