<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <LinearLayout 
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="18dp"
                       android:layout_marginRight="18dp"
                       android:layout_below="@+id/eventVenueLayout"
                       android:background="@color/white"
                       android:orientation="vertical"
                       >
                       
                       <LinearLayout 
                           android:id="@+id/layyy1"
                           android:layout_width="fill_parent"
                           android:layout_height="42dp"
                           android:orientation="horizontal"
                           >
                       
                                
                                 
                           <TextView 
                             android:layout_width="110dp"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/number_ans"
                               android:textStyle="bold"
                                 android:layout_marginLeft="15dp"
                              
                               />
                           
                             <TextView 
                                 android:id="@+id/number_address"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/number"
                             
                             
                               />
                        
                                     
                       </LinearLayout>
                       
                         <TextView 
                                 android:layout_width="fill_parent"
                                 android:layout_height="1dp"
                                 android:background="@color/gray_border"
                                 />
                         
                              <LinearLayout 
                           android:id="@+id/layyy2"
                           android:layout_width="fill_parent"
                           android:layout_height="42dp"
                           android:orientation="horizontal"
                           >
                          
                                      
                              
                           <TextView 
                              android:layout_width="110dp"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/streetnumber_ans"
                                android:textStyle="bold"
                                android:layout_marginLeft="15dp"
                               />
                               
                           
                           
                             <TextView 
                                 android:id="@+id/streetNmae"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/street"
                             />
                         
                           
                       </LinearLayout>
                       
                                <TextView 
                                 android:layout_width="fill_parent"
                                 android:layout_height="1dp"
                                 android:background="@color/gray_border"
                                 />
                                
                               <LinearLayout 
                           android:id="@+id/layyy3"
                           android:layout_width="fill_parent"
                           android:layout_height="42dp"
                           android:orientation="horizontal"
                           >
                           
                           <TextView 
                               android:layout_width="110dp"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/citynumber_ans"
                               android:textStyle="bold"
                              android:layout_marginLeft="15dp"
                               />
                           
                             <TextView 
                                 android:id="@+id/cityName"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/city"
                             
                               />
                             
                             
                       </LinearLayout>
                       
                                 <TextView 
                                 android:layout_width="fill_parent"
                                 android:layout_height="1dp"
                                 android:background="@color/gray_border"
                                 />
                                 
                                <LinearLayout 
                           android:id="@+id/layyy4"
                           android:layout_width="fill_parent"
                           android:layout_height="42dp"
                           android:orientation="horizontal"
                           >
                           
                           <TextView 
                               android:layout_width="110dp"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/statenumber_ans"
                               android:textStyle="bold"
                              android:layout_marginLeft="15dp"
                               />
                           
                             <TextView 
                                 android:id="@+id/stateName"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/state"
                              
                               />
                             
                    </LinearLayout>
                      <TextView 
                                 android:layout_width="fill_parent"
                                 android:layout_height="1dp"
                                 android:background="@color/gray_border"
                                 />
                         
                                       <LinearLayout 
                           android:id="@+id/layyy5"
                           android:layout_width="fill_parent"
                           android:layout_height="42dp"
                           android:orientation="horizontal"
                           >
                           
                           <TextView 
                               android:layout_width="110dp"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:text="@string/countrynumber_ans"
                               android:textStyle="bold"
                              android:layout_marginLeft="15dp"
                               />
                           
                             <ImageView 
                                 android:id="@+id/countryNameImage"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center_vertical"
                               android:background="@drawable/location"
                              android:layout_margin="8dp"
                               />
                           
                    </LinearLayout>
                      <TextView 
                                 android:layout_width="fill_parent"
                                 android:layout_height="1dp"
                                 android:background="@color/gray_border"
                                 />
                      </LinearLayout>
                      
</RelativeLayout>
